generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  requests Request[]

  role Role @default(USER)

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model Request {
  id        Int      @id @default(autoincrement())
  userId    String
  createdAt DateTime @default(now())

  status  Status    @default(PENDING)
  details Product[]
  User    User?     @relation(fields: [userId], references: [id])

  @@map("requests")
}

enum Status {
  PENDING
  PREPARING
  DELIVERED
}

model Product {
  id          String    @id @default(uuid())
  name        String    @unique
  description String
  image       String?
  price       Decimal
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  requestId   Int?

  Request     Request?     @relation(fields: [requestId], references: [id])
  ingredients Ingredient[]

  @@map("products")
}

model Ingredient {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())

  products Product[]

  @@map("ingredients")
}
